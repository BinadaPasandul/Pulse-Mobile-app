<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_dark_background"
    tools:context=".WaterpageActivity">

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration Tracker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay hydrated throughout the day"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Main Hydration Tracker Card -->
        <LinearLayout
            android:id="@+id/hydration_tracker_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="12dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Achievement Badge (Hidden by default) -->
            <LinearLayout
                android:id="@+id/achievement_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gradient_button_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/achievement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal Reached!"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Circular Progress Indicator -->
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginBottom="32dp">

                <!-- Background Circle with Glow Effect -->
                <View
                    android:id="@+id/progress_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_background_glow"
                    android:layout_centerInParent="true" />

                <!-- Progress Circle -->
                <com.example.pulse_binada.CircularProgressView
                    android:id="@+id/circular_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:progressColor="@color/primary_color"
                    app:progressBackgroundColor="@android:color/white"
                    app:progressStrokeWidth="14dp"
                    app:progressBackgroundStrokeWidth="10dp" />

                <!-- Center Content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                    <!-- Water Drop Icon with Animation -->
                    <ImageView
                        android:id="@+id/water_drop_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_water"
                        android:contentDescription="Water"
                        app:tint="@android:color/white"
                        android:layout_marginBottom="12dp" />

                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/8"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Progress Percentage -->
                    <TextView
                        android:id="@+id/progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12%"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Floating Water Drops Animation -->
                <ImageView
                    android:id="@+id/floating_drop_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_water"
                    android:contentDescription="Floating water drop"
                    app:tint="@color/primary_color"
                    android:alpha="0.6"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" />

                <ImageView
                    android:id="@+id/floating_drop_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_water"
                    android:contentDescription="Floating water drop"
                    app:tint="@color/primary_color"
                    android:alpha="0.4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="30dp" />

            </RelativeLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Remove Glass Button -->
                <Button
                    android:id="@+id/remove_glass_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="-"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/circle_button_background"
                    android:backgroundTint="@android:color/white"
                    android:stateListAnimator="@null"
                    android:elevation="6dp"
                    android:layout_marginEnd="20dp" />

                <!-- Add Glass Button -->
                <Button
                    android:id="@+id/add_glass_button"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:text="ðŸ’§ Add Glass"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/gradient_button_background"
                    android:backgroundTint="#4CAF50"
                    android:paddingHorizontal="28dp"
                    android:stateListAnimator="@null"
                    android:elevation="8dp" />

            </LinearLayout>

            <!-- Motivational Message -->
            <TextView
                android:id="@+id/motivational_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep hydrating! ðŸ’ª"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Daily Goal Card -->
        <LinearLayout
            android:id="@+id/daily_goal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hydration_tracker_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Goal Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Goal Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Number Input -->
                <EditText
                    android:id="@+id/goal_input"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="8"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/input_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_marginEnd="12dp" />

                <!-- Unit Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="glasses per day"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7" />

                <!-- Save Goal Button -->
                <Button
                    android:id="@+id/save_goal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Save"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reminder Settings Card -->
        <LinearLayout
            android:id="@+id/reminder_settings_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_goal_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Reminder Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Reminder Interval Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Interval Input -->
                <EditText
                    android:id="@+id/reminder_interval_input"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:text="60"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/input_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_marginEnd="12dp" />

                <!-- Unit Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="minutes"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7" />

            </LinearLayout>

            <!-- Enable Reminders Button -->
            <Button
                android:id="@+id/enable_reminders_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ”” Enable Reminders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/gradient_button_background"
                android:stateListAnimator="@null"
                android:elevation="6dp"
                android:layout_marginBottom="12dp" />

            <!-- Reset Today's Progress Button -->
            <Button
                android:id="@+id/reset_progress_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Reset Today's Progress"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="multiply"
                android:stateListAnimator="@null"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Water Analytics Card -->
        <LinearLayout
            android:id="@+id/water_analytics_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reminder_settings_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Analytics Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“Š Water Analytics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/weekly_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42 glasses this week"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7"
                    android:background="@drawable/input_background"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Weekly Progress Bars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/monday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="6"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/tuesday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="8"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/wednesday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="5"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/thursday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="7"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/friday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="8"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/saturday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="6"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6" />

                <ProgressBar
                    android:id="@+id/sunday_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_bar_background"
                    android:max="8"
                    android:progress="3" />

            </LinearLayout>

            <!-- Achievement Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/streak_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Streak"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ†"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/goals_achieved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goals Met"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§"
                        android:textSize="20sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/total_water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="168"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Glasses"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Smart Suggestions Card -->
        <LinearLayout
            android:id="@+id/smart_suggestions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/card_shadow"
            android:layout_margin="16dp"
            android:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@+id/water_analytics_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Suggestions Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’¡ Smart Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/suggestion_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 tips"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7"
                    android:background="@drawable/input_background"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Suggestions List -->
            <LinearLayout
                android:id="@+id/suggestions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Suggestion Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/input_background"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ…"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/suggestion_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start your day with a glass of water"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9" />

                </LinearLayout>

                <!-- Suggestion Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

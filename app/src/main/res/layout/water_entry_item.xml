<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_shadow"
    android:elevation="4dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Water Drop Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_water"
            android:contentDescription="Water"
            app:tint="@color/primary_color"
            android:layout_marginEnd="12dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/water_entry_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Time -->
        <TextView
            android:id="@+id/water_entry_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:background="@drawable/input_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Glasses Count -->
        <TextView
            android:id="@+id/water_entry_glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 glasses"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_button_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginEnd="16dp" />

        <!-- Progress Percentage -->
        <TextView
            android:id="@+id/water_entry_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37%"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/water_entry_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progressDrawable="@drawable/progress_bar_background"
        android:max="8"
        android:progress="3" />

    <!-- Achievement Badge (Hidden by default) -->
    <LinearLayout
        android:id="@+id/entry_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/gradient_button_background"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Reached!"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
